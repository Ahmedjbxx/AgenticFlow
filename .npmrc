# AgenticFlow Monorepo - npm/pnpm Configuration
# Security-focused dependency management settings

# Package Management
auto-install-peers=true
strict-peer-dependencies=false
prefer-workspace-packages=true
link-workspace-packages=deep

# Performance Optimization
hoist=true
shamefully-hoist=true
hoist-workspace-packages=false
package-import-method=clone-or-copy

# Security Settings
audit-level=moderate
fund=false
ignore-scripts=false
package-lock=true
save-exact=false
save-prefix=^

# Logging & Output
loglevel=warn
progress=true
package-manager-strict=false
update-notifier=false

# Registry & Authentication
registry=https://registry.npmjs.org/
always-auth=false

# Dependency Resolution
resolution-mode=highest
prefer-frozen-lockfile=true

# Security Audit Configuration
audit=true
# Run audit on install
audit-level=moderate
# Don't fail on vulnerabilities (let CI handle it)
audit-fail=false

# Cache Configuration
cache-dir=~/.npm
cache-max=1024000000
cache-min=10

# Development Settings
dev=false
optional=true
production=false

# Workspace Configuration
workspace-concurrency=4
workspace-root=true

# Version Control
git-tag-version=false
sign-git-tag=false

# Package Publishing (when needed)
access=restricted
publish-branch=main

# Environment Configuration
node-options="--max-old-space-size=4096"

# Renovate Integration
# These settings help Renovate work better with pnpm
legacy-peer-deps=false
prefer-offline=false 