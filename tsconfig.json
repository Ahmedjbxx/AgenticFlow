{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "baseUrl": ".",
    "paths": {
      "@agenticflow/types": ["packages/types"],
      "@agenticflow/core": ["packages/core"],
      "@agenticflow/config": ["packages/config"],
      "@agenticflow/nodes": ["packages/nodes"],
      "@agenticflow/ui": ["packages/ui"],
      "@agenticflow/hooks": ["packages/hooks"],
      "@agenticflow/templates": ["packages/templates"],
      "@agenticflow/styles": ["packages/styles"],
      "@agenticflow/testing": ["packages/testing"]
    }
  },
  "files": [],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/core" },
    { "path": "./packages/config" },
    { "path": "./packages/nodes" },
    { "path": "./packages/ui" },
    { "path": "./packages/hooks" },
    { "path": "./packages/templates" },
    { "path": "./packages/styles" },
    { "path": "./packages/testing" }
  ]
}
