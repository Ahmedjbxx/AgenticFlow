{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "agenticflow-monorepo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "packageManager": "pnpm@10.2.1",
  "engines": {
    "node": ">=20.15.0",
    "pnpm": ">=10.2.1"
  },
  "scripts": {
    "//prepare": "lefthook install",
    "preinstall": "node scripts/block-npm-install.js",
    "build": "turbo run build",
    "build:fast": "turbo run build --filter=@agenticflow/types --filter=@agenticflow/config --filter=@agenticflow/core",
    "build:backend": "turbo run build --filter=@agenticflow/types --filter=@agenticflow/config --filter=@agenticflow/core --filter=@agenticflow/nodes",
    "build:frontend": "turbo run build --filter=@agenticflow/ui --filter=@agenticflow/hooks --filter=@agenticflow/editor --filter=@agenticflow/store --filter=@agenticflow/styles",
    "build:incremental": "turbo run build --continue",
    "dev": "turbo run dev --parallel --env-mode=loose",
    "dev:backend": "turbo run dev --filter=@agenticflow/types --filter=@agenticflow/core --filter=@agenticflow/config --filter=@agenticflow/nodes --parallel",
    "dev:frontend": "turbo run dev --filter=@agenticflow/ui --filter=@agenticflow/hooks --filter=@agenticflow/editor --filter=@agenticflow/store --parallel",
    "test": "turbo run test",
    "test:backend": "turbo run test --filter=@agenticflow/types --filter=@agenticflow/core --filter=@agenticflow/config --filter=@agenticflow/nodes --concurrency=1",
    "test:frontend": "turbo run test --filter=@agenticflow/ui --filter=@agenticflow/hooks --filter=@agenticflow/editor --filter=@agenticflow/store --concurrency=1",
    "test:unit": "turbo run test:unit",
    "test:watch": "turbo run test:watch",
    "test:changed": "turbo run test --filter=...[HEAD^]",
    "test:coverage": "COVERAGE_ENABLED=true turbo run test",
    "typecheck": "turbo run typecheck",
    "typecheck:incremental": "turbo run typecheck --continue",
    "lint": "turbo run lint",
    "lintfix": "turbo run lintfix",
    "format": "turbo run format && node scripts/format.mjs",
    "format:check": "turbo run format:check",
    "clean": "turbo run clean",
    "clean:cache": "turbo clean && pnpm store prune",
    "reset": "node scripts/reset.mjs",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "release:snapshot": "pnpm build && changeset version --snapshot && changeset publish --tag snapshot",
    "deps:check": "pnpm audit --audit-level moderate",
    "deps:audit": "pnpm audit --fix",
    "deps:outdated": "pnpm outdated",
    "deps:update": "pnpm update --latest",
    "deps:update:interactive": "pnpm update --interactive --latest",
    "deps:security": "pnpm audit --audit-level high",
    "deps:licenses": "license-checker --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC'",
    "deps:graph": "pnpm list --depth=2 --prod",
    "deps:duplicates": "pnpm dedupe",
    "deps:clean": "pnpm store prune && pnpm install --frozen-lockfile",
    "deps:validate": "pnpm audit && pnpm outdated && npm run deps:licenses",
    "quality:gates": "node scripts/quality-gates.js",
    "quality:gates:precommit": "node scripts/quality-gates.js preCommit",
    "quality:gates:prepush": "node scripts/quality-gates.js prePush",
    "quality:gates:pr": "node scripts/quality-gates.js pullRequest",
    "quality:gates:release": "node scripts/quality-gates.js release",
    "quality:check": "pnpm quality:gates:pr",
    "publish:check": "pnpm changeset status && pnpm build && pnpm test",
    "publish:version": "changeset version && pnpm install --lockfile-only",
    "publish:release": "pnpm publish:check && changeset publish",
    "publish:preview": "changeset status --verbose",
    "publish:snapshot": "changeset version --snapshot && changeset publish --tag snapshot",
    "publish:prerelease": "changeset pre enter alpha && changeset version && changeset publish",
    "publish:graduate": "changeset pre exit && changeset version && changeset publish",
    "setup": "node scripts/setup-dev.js",
    "setup:quick": "node scripts/setup-dev.js --skip-build --skip-tests",
    "setup:force": "node scripts/setup-dev.js --force",
    "dev:start": "bash scripts/dev-start.sh",
    "postinstall": "node scripts/setup-dev.js --skip-build --skip-tests --skip-hooks || true"
  },
  "devDependencies": {
    "@agenticflow/eslint-config": "workspace:*",
    "@agenticflow/prettier-config": "workspace:*",
    "@biomejs/biome": "catalog:",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "eslint": "^9.28.0",
    "jest-junit": "^16.0.0",
    "license-checker": "^25.0.1",
    "prettier": "catalog:",
    "rimraf": "^6.0.1",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@agenticflow/nodes": "workspace:*",
    "@google/genai": "catalog:",
    "@types/react-mentions": "^4.4.1",
    "react": "catalog:",
    "react-dom": "catalog:",
    "react-mentions": "catalog:",
    "reactflow": "catalog:",
    "zustand": "catalog:"
  }
}
