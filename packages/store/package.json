{
  "name": "@agenticflow/store",
  "version": "0.1.0",
  "description": "Centralized state management for AgenticFlow",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist/**/*"],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@agenticflow/types": "workspace:*",
    "@agenticflow/core": "workspace:*",
    "zustand": "^5.0.5",
    "immer": "^10.0.0"
  },
  "peerDependencies": {
    "react": "^19.1.0"
  },
  "devDependencies": {
    "react": "^19.1.0",
    "@types/react": "^19.1.6",
    "typescript": "^5.7.2",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.0"
  },
  "keywords": [
    "state-management",
    "zustand",
    "store",
    "agenticflow"
  ],
  "author": "AgenticFlow Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agenticflow/agenticflow.git",
    "directory": "packages/store"
  }
} 